@model List<MimeKit.MimeMessage>

@{
    ViewData["Title"] = "Inbox";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inbox</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
        }
        .email-list {
            max-width: 800px;
            margin: 40px auto;
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }
        .email-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px;
            border-bottom: 1px solid #e9ecef;
            transition: background 0.2s;
        }
        .email-item:hover {
            background: #f1f1f1;
        }
        .email-details {
            flex: 1;
            overflow: hidden;
        }
        .email-subject {
            font-weight: bold;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }
        .email-date {
            color: #6c757d;
            font-size: 14px;
        }
        .btn-details, .btn-download {
            text-decoration: none;
            color: #007bff;
            font-weight: bold;
        }
        .btn-details:hover, .btn-download:hover {
            text-decoration: underline;
        }
        .btn-download {
            margin-left: 10px;
        }
    </style>
</head>
<body>

<div class="email-list">
    @foreach (var email in Model.AsEnumerable().Reverse())
    {
        <div class="email-item">
            <div class="email-details">
                <div class="email-subject">@email.Subject</div>
                <div class="email-date">@email.Date.ToString("yyyy-MM-dd HH:mm")</div>
            </div>
            <div>
                <a href="@Url.Action("Details", "Email", new { id = email.MessageId })" class="btn-details">View Details</a>
            </div>
        </div>
    }
</div>

</body>
</html>
